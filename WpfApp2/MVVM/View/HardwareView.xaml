<UserControl x:Class="WpfApp2.MVVM.View.HardwareView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp2.MVVM.View"
             xmlns:iconPack="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="1000" 
             d:DesignWidth="1000"
             Background="#141414">
    <ScrollViewer
        Background="Transparent"
        Foreground="Transparent">

        <Grid>

            <TextBlock 
                Text="{Binding SystemName, StringFormat='Operation system name: {0}'}"
                FontWeight="SemiBold"
                FontSize="18"
                Foreground="White"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="35,25"/>

            <ItemsControl

                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="25,75,0,0"
                ItemsSource="{Binding HardwareDetails}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border 
                            Background="#212121"
                            BorderThickness="3"
                            BorderBrush="#2b2b2b"
                            CornerRadius="5"
                            Margin="10" 
                            Padding="25"
                            Height="475"
                            Width="250">
                            <Border.Style>
                                <Style 
                                    TargetType="Border">
                                    <Style.Triggers>
                                        <EventTrigger 
                                            RoutedEvent="UIElement.MouseEnter">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation
                                                        Storyboard.TargetProperty="Width"
                                                        To="265" Duration="0:0:0.3"/>
                                                    <DoubleAnimation
                                                        Storyboard.TargetProperty="Height"
                                                        To="490" Duration="0:0:0.3"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                        <EventTrigger 
                                            RoutedEvent="UIElement.MouseLeave">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation
                                                        Storyboard.TargetProperty="Width"
                                                        To="250" Duration="0:0:0.3"/>
                                                    <DoubleAnimation
                                                        Storyboard.TargetProperty="Height"
                                                        To="475" Duration="0:0:0.3"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel>
                                <iconPack:PackIconModern
                                    Kind="{Binding Icon}"
                                    Foreground="#c9615b"
                                    HorizontalAlignment="Center"
                                    Margin="0,15,0,0"
                                    Height="75"
                                    Width="75"/>
                                <TextBlock 
                                    Margin="0,15,0,0"
                                    Text="{Binding Name}" 
                                    Foreground="White"
                                    FontSize="16"
                                    FontWeight="DemiBold"/>
                                <TextBlock 
                                    Text="{Binding Description}"
                                    Foreground="#b5b5b5"
                                    Margin="0,10,0,0"
                                    TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </ScrollViewer>

</UserControl>
