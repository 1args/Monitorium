<UserControl x:Class="WpfApp2.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp2.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="450"
             Background="{StaticResource GrayV2Brush}"
             Style="{StaticResource FadeInUserControlStyle}">

    <Grid>

        <Canvas 
            Opacity="0.15">
            <Rectangle 
                Fill="#333333" 
                Width="100"
                Height="100"
                Canvas.Left="50" 
                Canvas.Top="50"
                RadiusX="10"
                RadiusY="10" />
            <Rectangle 
                Fill="#444444"
                Width="120" 
                Height="120" 
                Canvas.Left="200"
                Canvas.Top="120"
                RadiusX="15"
                RadiusY="15" />
            <Rectangle 
                Fill="#555555" 
                Width="150" 
                Height="150" 
                Canvas.Left="350"
                Canvas.Top="250"
                RadiusX="20"
                RadiusY="20" />
            <Ellipse 
                Fill="#222222"
                Width="200" 
                Height="200" 
                Canvas.Left="50"
                Canvas.Top="300" />
        </Canvas>

        <StackPanel
            Orientation="Vertical"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Margin="35,25">
            <TextBlock
                Text="{Binding UserName, StringFormat='Welcome, {0}'}"
                FontWeight="SemiBold"
                FontSize="22"
                Foreground="White"
                HorizontalAlignment="Center"/>
            <TextBlock
                Width="450"
                Margin="0,15,0,0"
                Text="This software is designed to view the characteristics of the system hardware. It provides the user with information about key components."
                TextWrapping="Wrap"
                TextAlignment="Left"
                FontSize="15"
                Foreground="{StaticResource GrayV1Brush}"
                HorizontalAlignment="Center"/>

            <ItemsControl 
                ItemsSource="{Binding HardwareDetails}"
                Margin="0,25,0,0">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="10,10,0,0"
                            x:Name="border"
                            BorderThickness="2"
                            BorderBrush="{StaticResource GrayV3Brush}"
                            Padding="15,15"
                            CornerRadius="5">
                            <Border.ToolTip>
                                <ToolTip 
                                    Background="Transparent" 
                                    BorderThickness="0">
                                    <Border 
                                        Background="{StaticResource GrayV2Brush}"
                                        CornerRadius="5"
                                        BorderThickness="1"
                                        BorderBrush="{StaticResource GrayV4VBrush}">
                                        <TextBlock 
                                            Padding="10"
                                            Text="Go to hardware page"
                                            Foreground="{StaticResource GrayV1Brush}"/>
                                    </Border>
                                </ToolTip>
                            </Border.ToolTip>

                            <Border.Triggers>
                                <EventTrigger 
                                    RoutedEvent="UIElement.MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation
                                                Storyboard.TargetName="border"
                                                Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                From="{StaticResource GrayV3}"
                                                To="{StaticResource GrayV4}"
                                                Duration="0:0:0.6" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger 
                                    RoutedEvent="UIElement.MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation
                                                Storyboard.TargetName="border"
                                                Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                From="{StaticResource GrayV4}"
                                                To="{StaticResource GrayV3}"
                                                Duration="0:0:0.6" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>
                            
                            <TextBlock
                                Text="{Binding Name}"
                                FontSize="15"
                                FontWeight="DemiBold"
                                Foreground="{StaticResource RedBrush}"/>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
                
            
        </StackPanel>

    </Grid>

</UserControl>
