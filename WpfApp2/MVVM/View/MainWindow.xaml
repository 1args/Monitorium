<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2.MVVM.View"
        xmlns:iconPack="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="600"
        MinHeight="600"
        Width="1050"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="{StaticResource GrayV3Brush}">

    <Grid>

        <!-- Rows -->
        <Grid.RowDefinitions>
            <!-- Toolbar height -->
            <RowDefinition Height="40"/>
            <!-- Main content -->
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Grid 
            Grid.Row="0"
            VerticalAlignment="Center"
            Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="95"/>
            </Grid.ColumnDefinitions>

            <!-- Title -->
            <TextBlock
                Text="Monitorium"
                Foreground="{StaticResource GrayV1Brush}"
                VerticalAlignment="Center" 
                Margin="15,0,0,0"/>

            <!-- Window control buttons -->
            <StackPanel 
                Orientation="Horizontal" 
                HorizontalAlignment="Right" 
                Margin="0,0,5,0"
                Grid.Column="1">
                <Button
                    Content="➖" 
                    Foreground="{StaticResource GrayV1Brush}"
                    FontSize="9"
                    Style="{StaticResource WindowButtonStyle}" 
                    Command="{Binding MinimizeWindowCommand}"/>
                <Button
                    Style="{StaticResource WindowButtonStyle}" 
                    Command="{Binding MaximizeWindowCommand}">
                    <iconPack:PackIconModern
                        Kind="WindowRestore"
                        Foreground="{StaticResource GrayV1Brush}"
                        Height="10"
                        Width="10"/>
                </Button>
                <Button
                    Style="{StaticResource WindowButtonStyle}"
                    Command="{Binding CloseWindowCommand}">
                    <iconPack:PackIconModern
                        Kind="Close"
                        Foreground="{StaticResource GrayV1Brush}"
                        Height="10"
                        Width="10"/>
                </Button>
            </StackPanel>

            <!-- DragMove -->
            <Grid.InputBindings>
                <MouseBinding MouseAction="LeftClick" Command="{Binding MoveWindowCommand}"/>
            </Grid.InputBindings>
        </Grid>

        <!-- Main content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="125"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Navigation bar -->
            <StackPanel 
                Grid.Column="0"
                Margin="0,10,0,0">
                <RadioButton 
                    Content="Home"
                    Command="{Binding NavigateToHomeViewCommand}"
                    Style="{StaticResource NavigationButtonStyle}"
                    FontSize="13"
                    FontWeight="DemiBold"
                    IsChecked="True"/>
                <RadioButton 
                    Margin="0,10,0,0"
                    Content="Hardware" 
                    Command="{Binding NavigateToHardwareViewCommand}"
                    Style="{StaticResource NavigationButtonStyle}"
                    FontSize="13"
                    FontWeight="DemiBold"/>
            </StackPanel>

            <Grid Grid.Column="1" Background="{StaticResource GrayV2Brush}"/>

            <!-- View -->
            <ContentControl
                Grid.Column="1" 
                Content="{Binding NavigationService.CurrentView}"
                Background="{StaticResource GrayV2Brush}"/>
        </Grid>
    </Grid>
</Window>
