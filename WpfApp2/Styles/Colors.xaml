<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Main colours -->
    <Color x:Key="Red">#c9615b</Color>
    <Color x:Key="GrayV1">#b5b5b5</Color>
    <Color x:Key="GrayV2">#141414</Color>
    <Color x:Key="GrayV3">#0d0d0d</Color>
    <Color x:Key="GrayV4">#2b2b2b</Color>

    <!-- Brushes for use in style -->
    <SolidColorBrush x:Key="RedBrush" Color="{StaticResource Red}"/>
    <SolidColorBrush x:Key="GrayV1Brush" Color="{StaticResource GrayV1}"/>
    <SolidColorBrush x:Key="GrayV2Brush" Color="{StaticResource GrayV2}"/>
    <SolidColorBrush x:Key="GrayV3Brush" Color="{StaticResource GrayV3}"/>
    <SolidColorBrush x:Key="GrayV4VBrush" Color="{StaticResource GrayV4}"/>

</ResourceDictionary>